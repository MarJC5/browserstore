{
    "manifest_version": 2,
    "name": "Browserstore",
    "version": "1.0",
    "description": "Manage localStorage items with size and creation date.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "icons/128.png"
        }
    },
    "icons": {
        "128": "icons/128.png"
    },
    "developer": {
        "name": "Martin Jean-Christio",
        "url": "https://misits.ch"
    },
    "default_locale": "en"
}
